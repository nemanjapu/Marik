@model Marik.Core.ViewModels.AboutViewModel
@{
    ViewBag.Title = "About";
}
@section metatags{
    <meta name="keywords" content="marketing, social media, email marketing, online marketing, advertising, public relations, Google Ads, Paid search, SEO,  business, development, Web and Graphic Design, UI / UX, Web & App Development, Branding, Photography, Content management, SPSS, market research, consumer behaviour, web design" />
    <meta name="description" content="Marik gives you the best of integrated marketing and business development. Book a consultation call, and our team will help you make an impact." />
    <link href="http://www.bymarik.com/about" rel="canonical" />
    <meta property="og:url" content="http://www.bymarik.com/about" />
    <meta property="og:title" content="Marik | About" />
    <meta property="og:description" content="Marik gives you the best of integrated marketing and business development. Book a consultation call, and our team will help you make an impact." />
    <meta property="og:image:alt" content="Marik | Marketing and Business Development" />
    <meta property="og:type" content="website" />
}

<section class="about container">
    <div class="row">
        <div class="col-xl-6 pr-xl-5 mb-xl-0 mb-4">
            <div class="img-con">
                <img src="@Model.AboutFirstSectionImagePath/@Model.AboutFirstSectionImageName" alt="About Marik">
            </div>
        </div>
        <div class="col-xl-6 pl-xl-5">
            <h2 class="title ml-xl-auto text-xl-right">@Html.Raw(Model.AboutFirstSectionTitle)</h2>
            <h4>@Html.Raw(Model.AboutFirstSectionFirstParagraph)</h4>
            <p>@Html.Raw(Model.AboutFirstSectionSecondParagraph)</p>
            <div class="text-xl-right">
                <a href="#about" class="button btn">more this way</a>
                <a href="#about" class="about-arrow"><i class="fas fa-arrow-down"></i></a>
            </div>
        </div>
    </div>
</section>

<section class="services container-fluid" id="about-scroll-to">
    <h2>@Html.Raw(Model.AboutTheFunStuffTitle)</h2>
    <div class="row">
        <div class="col-xl service">
            <a href="#my-story"><img src="@Model.AboutMyStoryMainImagePath/@Model.AboutMyStoryMainImageName" alt=""></a>
            <a href="#my-story" class="btn button">@Html.Raw(Model.AboutMyStoryTitle)</a>
        </div>
        <div class="col-xl-3 service">
            <a href="#my-favorites"><img src="@Model.AboutMyFavoritesMainImagePath/@Model.AboutMyFavoritesMainImageName" alt=""></a>
            <a href="#my-favorites" class="btn button">@Html.Raw(Model.AboutMyFavoritesTitle)</a>
        </div>
        <div class="col-xl service">
            <a href="#footer"><img src="@Model.AboutFollowAlongMainImagePath/@Model.AboutFollowAlongMainImageName" alt=""></a>
            <a href="#footer" class="btn button">follow along</a>
        </div>
    </div>
</section>

<section class="hidden-con" id="hidden-about">
    <div id="my-story" class="hidden-tab">
        <div class="hidden-content p-5">
            <div class="wrapper-600">
                <h2 class="title text-white">@Html.Raw(Model.AboutMyStoryTitle)<span>@Html.Raw(Model.AboutMyStorySubtitle)</span></h2>
                <p>@Html.Raw(Model.AboutMyStoryContent)</p>
            </div>
        </div>
    </div>
    <div id="my-favorites" class="hidden-tab">
        <div class="hidden-content p-5">
            <div class="wrapper-600">
                <h2 class="title text-white">@Html.Raw(Model.AboutMyFavoritesTitle)<span>@Html.Raw(Model.AboutMyFavoritesSubtitle)</span></h2>
                <div class="favorites-table container-fluid">
                    <div class="row">
                        <div class="col-sm-6 left-col">
                            <h5>@Html.Raw(Model.AboutMyFavoritesOneOneTitle)</h5>
                            <p>@Html.Raw(Model.AboutMyFavoritesOneOneSubtitle)</p>
                        </div>
                        <div class="col-sm-6 right-col">
                            <h5>@Html.Raw(Model.AboutMyFavoritesOneTwoTitle)</h5>
                            <p>@Html.Raw(Model.AboutMyFavoritesOneTwoSubtitle)</p>
                        </div>
                        <div class="col-sm-6 left-col">
                            <h5>@Html.Raw(Model.AboutMyFavoritesTwoOneTitle)</h5>
                            <p>@Html.Raw(Model.AboutMyFavoritesTwoOneSubtitle)</p>
                        </div>
                        <div class="col-sm-6 right-col">
                            <h5>@Html.Raw(Model.AboutMyFavoritesTwoTwoTitle)</h5>
                            <p>@Html.Raw(Model.AboutMyFavoritesTwoTwoSubtitle)</p>
                        </div>
                        <div class="col-sm-6 left-col">
                            <h5>@Html.Raw(Model.AboutMyFavoritesThreeOneTitle)</h5>
                            <p>@Html.Raw(Model.AboutMyFavoritesThreeOneSubtitle)</p>
                        </div>
                        <div class="col-sm-6 right-col">
                            <h5>@Html.Raw(Model.AboutMyFavoritesThreeTwoTitle)</h5>
                            <p>@Html.Raw(Model.AboutMyFavoritesThreeTwoSubtitle)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

