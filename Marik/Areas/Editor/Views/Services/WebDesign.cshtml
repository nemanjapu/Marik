@model Marik.Core.ViewModels.ServiceViewModel
@{
    ViewBag.Title = "Web Design";
}

@using (Html.BeginForm("SaveWebDesignContent", "Services", FormMethod.Post, new { area = "Editor", enctype = "multipart/form-data" }))
{
    <div class="home-banner">
        <label for="ServiceWebDesignMainImageFile" class="button btn image-editor-button-label">Change image</label>
        @Html.TextBoxFor(m => m.ServiceWebDesignMainImageFile, new { @class = "image-editor-button", type = "file" })
        <img id="ServiceWebDesignMainImageFileImage" src="@Model.ServiceWebDesignMainImagePath/@Model.ServiceWebDesignMainImageName" alt="banner">
        <div class="banner-overlay">
            <h1>@Html.TextAreaFor(m => m.ServiceWebDesignTitle, new { @class = "WebsiteEditorArea" })</h1>
            <h3>@Html.TextAreaFor(m => m.ServiceWebDesignSubtitle, new { @class = "WebsiteEditorArea" })</h3>
        </div>
    </div>
    <section class="about container">
        <div class="row">
            <div class="col-xl-6 pr-xl-5 mb-xl-0 mb-4">
                <div class="img-con">
                    <label for="ServiceWebDesignFirstSectionImageFile" class="button btn image-editor-button-label">Change image</label>
                    @Html.TextBoxFor(m => m.ServiceWebDesignFirstSectionImageFile, new { @class = "image-editor-button", type = "file" })
                    <img id="ServiceWebDesignFirstSectionImageFileImage" src="@Model.ServiceWebDesignFirstSectionImagePath/@Model.ServiceWebDesignFirstSectionImageName" alt="ServiceWebDesign Marik">
                </div>
            </div>
            <div class="col-xl-6 pl-xl-5">
                <h2 class="title ml-xl-auto text-xl-right">@Html.TextAreaFor(m => m.ServiceWebDesignFirstSectionTitle, new { @class = "WebsiteEditorArea" })</h2>
                <h4>@Html.TextAreaFor(m => m.ServiceWebDesignFirstSectionFirstParagraph, new { @class = "WebsiteEditorArea" })</h4>
                <p>@Html.TextAreaFor(m => m.ServiceWebDesignFirstSectionSecondParagraph, new { @class = "WebsiteEditorArea" })</p>
            </div>
        </div>
    </section>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-block btn-success btn-save-editor"><i class="fa fa-check" aria-hidden="true"></i></button>
}
