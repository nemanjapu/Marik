@model Marik.Core.ViewModels.ServiceViewModel
@{
    ViewBag.Title = "Marketing";
}

@using (Html.BeginForm("SaveMarketingContent", "Services", FormMethod.Post, new { area = "Editor", enctype = "multipart/form-data" }))
{
    <div class="home-banner">
        <label for="ServiceMarketingMainImageFile" class="button btn image-editor-button-label">Change image</label>
        @Html.TextBoxFor(m => m.ServiceMarketingMainImageFile, new { @class = "image-editor-button", type = "file" })
        <img id="ServiceMarketingMainImageFileImage" src="@Model.ServiceMarketingMainImagePath/@Model.ServiceMarketingMainImageName" alt="banner">
        <div class="banner-overlay">
            <h1>@Html.TextAreaFor(m => m.ServiceMarketingTitle, new { @class = "WebsiteEditorArea" })</h1>
            <h3>@Html.TextAreaFor(m => m.ServiceMarketingSubtitle, new { @class = "WebsiteEditorArea" })</h3>
        </div>
    </div>
    <section class="about container">
        <div class="row">
            <div class="col-xl-6 pr-xl-5 mb-xl-0 mb-4">
                <div class="img-con">
                    <label for="ServiceMarketingFirstSectionImageFile" class="button btn image-editor-button-label">Change image</label>
                    @Html.TextBoxFor(m => m.ServiceMarketingFirstSectionImageFile, new { @class = "image-editor-button", type = "file" })
                    <img id="ServiceMarketingFirstSectionImageFileImage" src="@Model.ServiceMarketingFirstSectionImagePath/@Model.ServiceMarketingFirstSectionImageName" alt="ServiceMarketing Marik">
                </div>
            </div>
            <div class="col-xl-6 pl-xl-5">
                <h2 class="title ml-xl-auto text-xl-right">@Html.TextAreaFor(m => m.ServiceMarketingFirstSectionTitle, new { @class = "WebsiteEditorArea" })</h2>
                <h4>@Html.TextAreaFor(m => m.ServiceMarketingFirstSectionFirstParagraph, new { @class = "WebsiteEditorArea" })</h4>
                <p>@Html.TextAreaFor(m => m.ServiceMarketingFirstSectionSecondParagraph, new { @class = "WebsiteEditorArea" })</p>
            </div>
        </div>
    </section>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-block btn-success btn-save-editor"><i class="fa fa-check" aria-hidden="true"></i></button>
}
