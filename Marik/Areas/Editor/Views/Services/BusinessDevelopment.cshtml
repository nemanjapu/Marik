@model Marik.Core.ViewModels.ServiceViewModel
@{
    ViewBag.Title = "Content Management";
}

@using (Html.BeginForm("SaveContentManagementContent", "Services", FormMethod.Post, new { area = "Editor", enctype = "multipart/form-data" }))
{
    <div class="home-banner">
        <label for="ServiceContentManagementMainImageFile" class="button btn image-editor-button-label">Change image</label>
        @Html.TextBoxFor(m => m.ServiceContentManagementMainImageFile, new { @class = "image-editor-button", type = "file" })
        <img id="ServiceContentManagementMainImageFileImage" src="@Model.ServiceContentManagementMainImagePath/@Model.ServiceContentManagementMainImageName" alt="banner">
        <div class="banner-overlay">
            <h1>@Html.TextAreaFor(m => m.ServiceContentManagementTitle, new { @class = "WebsiteEditorArea" })</h1>
            <h3>@Html.TextAreaFor(m => m.ServiceContentManagementSubtitle, new { @class = "WebsiteEditorArea" })</h3>
        </div>
    </div>
    <section class="about container">
        <div class="row">
            <div class="col-xl-6 pr-xl-5 mb-xl-0 mb-4">
                <div class="img-con">
                    <label for="ServiceContentManagementFirstSectionImageFile" class="button btn image-editor-button-label">Change image</label>
                    @Html.TextBoxFor(m => m.ServiceContentManagementFirstSectionImageFile, new { @class = "image-editor-button", type = "file" })
                    <img id="ServiceContentManagementFirstSectionImageFileImage" src="@Model.ServiceContentManagementFirstSectionImagePath/@Model.ServiceContentManagementFirstSectionImageName" alt="ServiceContentManagement Marik">
                </div>
            </div>
            <div class="col-xl-6 pl-xl-5">
                <h2 class="title ml-xl-auto text-xl-right">@Html.TextAreaFor(m => m.ServiceContentManagementFirstSectionTitle, new { @class = "WebsiteEditorArea" })</h2>
                <h4>@Html.TextAreaFor(m => m.ServiceContentManagementFirstSectionFirstParagraph, new { @class = "WebsiteEditorArea" })</h4>
                <p>@Html.TextAreaFor(m => m.ServiceContentManagementFirstSectionSecondParagraph, new { @class = "WebsiteEditorArea" })</p>
            </div>
        </div>
    </section>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-block btn-success btn-save-editor"><i class="fa fa-check" aria-hidden="true"></i></button>
}
