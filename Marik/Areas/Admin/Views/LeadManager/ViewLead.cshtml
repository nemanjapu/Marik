@model Marik.Core.Models.Lead
@{
    ViewBag.Title = "Contact info";
}

<h2>Contact info</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-7">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>First Name:</b>
                    <span>@Model.FirstName</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>Last Name:</b>
                    <span>@Model.LastName</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>Email Address:</b>
                    <span>@Model.EmailAddress</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>Phone Number:</b>
                    <span>@Model.PhoneNumber</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>Location:</b>
                    <span>@Model.Location</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>Business Name:</b>
                    <span>@Model.BusinessName</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>Website:</b>
                    <span>@Model.Website</span>
                </li>
            </ul>
        </div>
        <div class="col-xl-5">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <b>Source:</b>
                    <span>@Model.LeadSource</span>
                </li>
                <li class="list-group-item flex-column align-items-start">
                    <p>Message: </p>
                    <p>@Model.Note</p>
                </li>
            </ul>
        </div>
    </div>
</div>